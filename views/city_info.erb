<a href="/">Home</a>

<h4><%= @city %></h4>
<div class="row">

    <% if @city_info.length > 0 %>
      <% @city_info.each do |info| %>
      <div class="col-sm-10">
          <p>Train: <%= info.name %></p>
          <p>Time: <%= info.time %></p>
        </div>
        <div class="col-sm-2">
          <button type="button" class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-pencil"></span> <a href="/edit/<%= @city %>/<%= info.name %>">Edit</a>
          </button>
          <form class="" action="/" method="post">
            <input type="hidden" name="time" value="<%= info.time %>">
            <input type="hidden" name="train" value=" <%= info.name %>">
            <input type="hidden" name="city" value="<%= @city %>">
            <input type="hidden" name="_method" value="delete">
            <button type="submit" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-remove"></span>Delete
            </button>
          </form>

        </div>
      <% end %>
    <% else %>
      <p>Sorry no train stop here</p>
    <% end %>





</div>
